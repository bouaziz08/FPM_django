pipeline {
	agent any
	options {
		buildDiscarder(logRotator(numToKeepStr: '5'))
	}
	stages {
		stage('Scan') {
			steps {
				withSonarQubeEnv(installationName: 'sq1'){
					bat """
			                python -m venv ${VENV_DIR}
			                ${VENV_DIR}\\Scripts\\activate
			                pip install --upgrade pip
			                
			                """ 
				}
			}
		}
	}
}
